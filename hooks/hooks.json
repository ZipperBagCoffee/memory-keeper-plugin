{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/load-memory.js\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "cat | node \"${CLAUDE_PLUGIN_ROOT}/scripts/counter.js\" check"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "cat | node \"${CLAUDE_PLUGIN_ROOT}/scripts/counter.js\" final"
          }
        ]
      }
    ]
  }
}
